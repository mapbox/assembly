{
  "extends": "../.eslintrc",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "node/no-unsupported-features": "off",
    "node/no-missing-require": "off",
    "spaced-comment": "off"
  }
}
